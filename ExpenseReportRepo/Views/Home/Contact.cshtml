@model ExpenseReportRepo.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<div class="row">
    <div class="col-md-5 col-md-offset-2">
        <h2>Contact</h2>
        <form method="post">           
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>
            <div class="form-group">                
                <input type="submit" value="Send Message" class="btn btn-success" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
