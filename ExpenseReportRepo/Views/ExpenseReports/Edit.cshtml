@model ExpenseReportRepo.Models.ExpenseReport

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Expense Report</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-muted"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-muted"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateSubmitted" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateSubmitted" class="form-control" />
                <span asp-validation-for="DateSubmitted" class="text-muted"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DatePaid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatePaid" class="form-control" />
                <span asp-validation-for="DatePaid" class="text-muted"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Details" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
