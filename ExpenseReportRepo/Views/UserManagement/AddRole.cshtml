@model ExpenseReportRepo.ViewModels.UserManagementAddRoleViewModel

<h3>Add Role for @Model.UserName</h3>

<div asp-validation-summary="All"></div>
<form asp-controller="UserManagement" asp-action="AddRole">
    <input asp-for="UserId" type="hidden"/>
    <div class="col-lg-5">
        <select class="form-control" id="select" asp-for="NewRole" asp-items="Model.Roles"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Role" class="btn btn-success" />
    </div>
</form>
